<Window x:Class="Tester1._0._1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tester1._0._1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Button x:Name="WorkWithTest" Grid.Row="0" Margin="100, 50, 100, 50"
                FontSize="45" Click="_WorkWithTest_Click">Робота з тестом</Button>
        <Button x:Name="Test" Grid.Row="1" Margin="100, 50, 100, 50"
                FontSize="45" Click="Test_OnClick">Розпочати тестування</Button>
    </Grid>
</Window>
